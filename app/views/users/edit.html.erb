
<% provide(:title, 'Update Profile') %>

<div class = "well gray ">
<h1><center><strong>Update Profile</strong></center></h1>
<center><%= image_tag @user.avatar (:thumb) %></center>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %> 
      <% if current_user.chef? %>
        <%= f.label :Type_of_food %>
        <%= f.text_field :food, class: 'form-control' %>
        <%= f.label :Menu %> (List items, prices, and any other information about your offered dining experience)
        <%= f.text_area :menu, class: 'form-control' %> 
      <% end %>
      <%= f.label :zipcode %>
      <%= f.text_field :zipcode, class: 'form-control' %>
      <%= f.label :avatar %>
      <%= f.file_field :avatar %>
        <center>
    <div class="col-sm-offset-2 col-sm-7 ">
      <div class="checkbox">
        <label>
          <%= f.check_box :remove_avatar %> Remove Avatar
	</label>
      </div>
    </div>
  </center>
     <!--- <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %> --->
<br>

      <%= f.submit "Save Changes", class: "btn btn-warning" %>
    <% end %>
	<%= link_to "Reset Password", new_password_reset_path %>
	<br>

	<br>
  </div>
</div>
</div>
